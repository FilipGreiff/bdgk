---
import Layout from '../layouts/Layout.astro';
import CourseStatus from '../components/CourseStatus.astro';
import EventTimeline from '../components/EventTimeline.astro';
---

<Layout title="Välkommen">
  <CourseStatus />
  <EventTimeline />
  
  <section class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Banan</h2>
      <img src="/nara_hal1.jpg" alt="Golfbanan" class="w-full h-48 object-cover rounded-lg mb-4" />
      <p class="text-gray-600">
        Välkommen till vår vackra golfbana. Vi erbjuder en utmanande och välskött 18-hålsbana i 
        naturskön miljö.
      </p>
      <a href="/banan" class="inline-block mt-4 text-green-700 hover:text-green-800">Läs mer om banan →</a>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Medlemskap</h2>
      <div class="space-y-4">
        <div class="p-4 bg-gray-50 rounded-lg">
          <h3 class="font-semibold">Senior</h3>
          <p class="text-gray-600">3000 kr/år</p>
        </div>
        <div class="p-4 bg-gray-50 rounded-lg">
          <h3 class="font-semibold">Junior (13-21 år)</h3>
          <p class="text-gray-600">1200 kr/år</p>
        </div>
        <a href="/medlemskap" class="inline-block mt-2 text-green-700 hover:text-green-800">Se alla medlemskap →</a>
      </div>
    </div>
  </section>
</Layout>